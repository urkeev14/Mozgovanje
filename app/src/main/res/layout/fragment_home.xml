<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_main_tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tvWelcome"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/activity_main_btnZenMode"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:foreground="@mipmap/ic_yinyang_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_tvWelcome" />

    <ImageButton
        android:id="@+id/activity_main_btnExamnMode"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:foreground="@mipmap/ic_exam_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_btnZenMode" />

    <ImageButton
        android:id="@+id/activity_main_btnNerdMode"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:foreground="@mipmap/ic_geek_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_btnExamnMode" />

    <TextView
        android:id="@+id/activity_main_tvZenMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvZenMod"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_btnZenMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btnZenMode"
        app:layout_constraintTop_toTopOf="@+id/activity_main_btnZenMode" />

    <TextView
        android:id="@+id/activity_main_tvExamMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTestMod"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_btnExamnMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btnExamnMode"
        app:layout_constraintTop_toTopOf="@+id/activity_main_btnExamnMode" />

    <TextView
        android:id="@+id/activity_main_tvGeekMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvGeekMod"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_btnNerdMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_btnNerdMode"
        app:layout_constraintTop_toTopOf="@+id/activity_main_btnNerdMode" />

</androidx.constraintlayout.widget.ConstraintLayout>